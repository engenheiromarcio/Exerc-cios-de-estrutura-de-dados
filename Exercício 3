//Exercício 3, PDF da aula 2 (funções) Função que retorne o resto da divisão entre dois números.
#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <locale.h>

int divisao(int a, int b){
    int result;
    
    result = (a % b);
    
    return result;
    
}

int main()
{
	setlocale(LC_ALL, "Portuguese");
   int num1 , num2, retorno;
   	printf("Oi! Tudo bem?\nEste programa tem como função calcular o resto da divisão entre dois números quaisquer\n ");
   printf("Digite os dois números a serem divididos:  ");
   scanf("%d %d", &num1, &num2);
   getchar();
   if(num1 > num2){
   retorno = divisao(num1,num2);}
   
    if(num2 > num1){
        retorno = divisao(num2,num1);   
                    }
    system("cls");
   printf("O valor do resto da divisão é: %d ", retorno);
   system("pause");
   
}
